{
  "manifest_version": 3,
  "name": "SleepShield",
  "version": "1.0.0",
  "description": "Block distracting websites during your sleep window â€” including work tools, AI, and search engines.",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.css", "blocked.js", "questions.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
